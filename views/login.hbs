<h1>
  Login
</h1>
{{!-- Show error message if credentials are incorrect --}}
{{#if messages}}
    <div class="alert alert-danger">
        Invalid credentials
    </div>
{{else}}
    <div class="alert alert-info">
        Please enter your credentials
    </div>
{{/if}}
<form method="post">
  <fieldset class="form-group">
    <label for="username" class="col-2 control-label">
      Username: *
    </label>
    <input name="username" id="username" required />
  </fieldset>
  <fieldset class="form-group">
    <label for="password" class="col-2 control-label">
      Password: *
    </label>
    <input name="password" id="password" type="password" required />
  </fieldset>
  <fieldset class="form-group">
    <button class="btn btn-info offset-3">
      Login
    </button>
    <a class="btn btn-info" href="/google">Login with google</a>
    <hr />
    Need an account?
    <a href="/register" title="Register">
      Register
    </a>
  </fieldset>
</form>

<style>
/* General Styles */
/* General Body Styling */
body {
  padding: 50px;
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
  background-color: #f4f7f9;
  margin: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start; /* Align content to the top */
  height: 100vh;
  color: #333;
}

/* Form Container */

form{
  display: flex;
  flex-direction: column;
  justify-content: center; /* Align content to the top */
  align-items: center;
}

fieldset {
  margin-bottom: 30px; 
}

form.login-form {
  background-color: #fff;
  border-radius: 10px;
  padding: 30px;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 400px;
}

/* Header Styling */
h1 {
  color: #333;
  font-size: 2.5rem;
  margin-bottom: 20px;
}

/* Input Fields */
.form-control {
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 16px;
  width: 100%;
  margin-bottom: 20px;
}

.form-control:focus {
  border-color: #007acc;
  outline: none;
  box-shadow: 0 0 8px rgba(0, 122, 204, 0.2);
}

/* Button Styles */
.btn {
  padding: 12px;
  margin-bottom: 30px;
  margin-left: 0;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  width: 100%;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.btn-primary {
  background-color: #007acc;
  color: white;
}
.btn-google {
  background-color: #db4437;
  color: white;
  margin-top: 10px;
}

/* Hyperlink Styling */
a {
  color: #00B7FF; /* Link color changed as per request */
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}
